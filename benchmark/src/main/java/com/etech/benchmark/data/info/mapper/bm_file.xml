<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.etech.benchmark.data.info.dao.BmFileDao" >
  <resultMap id="BmFileResultMap" type="com.etech.benchmark.data.info.model.BmFile" >
    <id column="id" property="id" jdbcType="CHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="tree_id" property="tree_id" jdbcType="CHAR" />
    <result column="dic_id" property="dic_id" jdbcType="INTEGER" />
    <result column="save_path" property="save_path" jdbcType="VARCHAR" />
    <result column="type" property="type" jdbcType="VARCHAR" />
    <result column="condition" property="condition" jdbcType="VARCHAR" />
    <result column="other" property="other" jdbcType="VARCHAR" />
    <result column="valid" property="valid" jdbcType="TINYINT" />
    <result column="updater_fk" property="updater_fk" jdbcType="CHAR" />
    <result column="creator_fk" property="creator_fk" jdbcType="CHAR" />
    <result column="date_update" property="date_update" jdbcType="TIMESTAMP" />
    <result column="date_create" property="date_create" jdbcType="TIMESTAMP" />
    <result column="model" property="model" jdbcType="VARCHAR" />
  </resultMap>
	<sql id="base_column">
		id, 
		`name`, 
		tree_id, 
		dic_id, 
		save_path,
		type,
		`condition`, 
		other, 
		valid, 
		updater_fk,
		creator_fk, 
		date_update,
		date_create
	</sql>
	<select id="findOne" parameterType="map" resultMap="BmFileResultMap">
	    select 
	    <include refid="base_column" />
		from bm_excel 
	      where
	      id=#{id}
	 </select>
	<select id="find" parameterType="map" resultMap="BmFileResultMap">
		SELECT 
		<include refid="base_column" />
		FROM bm_excel
		where valid = 1 order by date_create
	</select>
	<select id="page" parameterType="map" resultMap="BmFileResultMap">
		SELECT 
		<include refid="base_column" />
		, (select name  from sys_data_dictionary where id = dic_id) as modal
		FROM bm_excel
		where valid = 1 
	</select>
	<select id="getConditions" parameterType="map" resultType="map">
		select getParentList(#{treeId}) conditions;
	</select>
	<insert id="insertExcel" parameterType="com.etech.benchmark.data.info.model.BmFile">
	    INSERT INTO bm_excel 
	    (<include refid="base_column"/>)
	     VALUES (
			#{id}         ,
			#{name }      ,
			#{tree_id }   ,
			#{dic_id }    ,
			#{save_path } ,
			#{type }      ,
			#{condition}  ,
			#{other}      , 
			1             , 
			#{updater_fk} ,
			#{creator_fk} , 
			now(),
			now()  
	    )
  </insert>
  <delete id="deleteFile" parameterType="map">
  	   DELETE FROM bm_excel WHERE ID = #{id}
  </delete>
  <update id="updateExcelCondition" parameterType="map">
  	   update bm_excel set `condition` = (select getParentList(#{treeId}) `condition`) where tree_id = #{treeId}
  </update>
  
  <select id="getExcelByTreeId" resultType="com.etech.benchmark.data.info.model.BmFile">
        select * from bm_excel where tree_id = #{treeId} and type like 'xls%'
  </select>
  
  <select id="searchByName" parameterType="map" resultType="com.etech.benchmark.data.info.model.BmFile">
        select * from  `bm_excel`  where `name`  like concat('%',  #{keywords}, '%' ) and  `type`  like 'xls%'
  </select>
  
</mapper>